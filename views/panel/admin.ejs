<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../includes/Bootstrab.ejs') -%>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Admin
            <%= User.moblie  %>
        </title>


        <link rel="stylesheet" href="/css/dataTables.bootstrap4.min.css">
</head>
<style>
    td {
        text-align: center;
        color: hotpink;
    }
    
    button.btn-delet {
        border: none;
        color: hsl(0deg 100% 50%);
        background-color: hsl(60deg 100% 50%);
        border-radius: 70px;
        height: 24px;
        width: 45px;
    }
    
    button.btn-edit {
        border: none;
        color: yellow;
        background-color: red;
        border-radius: 70px;
        height: 24px;
        width: 45px;
    }
    
    th {
        text-align: center;
        color: orangered;
    }
</style>
<header>
    <%- include('../includes/Headers.ejs') -%>
</header>
<br>

<main>

    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>ردیف</th>
                <th>موبایل</th>
                <th>نقش</th>
                <th>آنلاین</th>
                <th>تاریخ ثبت نام</th>
                <th>سطح کاربری</th>

            </tr>
        </thead>
        <tbody>

            <% for(let i =0;i<alluser.length;i++){ %>
                <tr>
                    <td>
                        <%=i+1  %>
                    </td>


                    <td>
                        <%=alluser[i].moblie  %>
                    </td>


                    <% if(alluser[i].role == 'admin'){ %>
                        <td style="color: blue;">مدیرسایت</td>
                        <% }else{ %>
                            <td> کاربر</td>
                            <% } %>


                                <% if(alluser[i].OKy == true){ %>
                                    <td style="color:teal;">آنلاین</td>
                                    <% }else{ %>
                                        <td> آخرین بازدید یک ساعت پیش</td>
                                        <% } %>


                                            <td>
                                                <%= d[i].datfarsi%>
                                            </td>


                                            <td>
                                                <%=alluser[i].active  %>
                                            </td>
                                            <form action="/admin/delet/<%=alluser[i].id  %> " method="post">
                                                <td> <button class="btn-delet"> <i class="fa fa-trash" aria-hidden="true"></i></button></td>
                                            </form>


                                            <form action="/admin/update/<%=alluser[i].id  %> " method="GET">

                                                <td> <button class="btn-edit"> <i class="fa  fa-edit" aria-hidden="true"></i></button></td>
                                            </form>

                </tr>
                <% } %>

        </tbody>
        <!-- <tfoot>
            <tr>
                <th>Name</th>
                <th>Position</th>
                <th>Office</th>
                <th>Age</th>
                <th>Start date</th>
                <th>Salary</th>
            </tr>
        </tfoot> -->
    </table>
</main>

<footer>
    <%- include('../includes/Footers.ejs') -%>
</footer>

<body>

</body>
<script src="/css/dataTables.bootstrap4.min.js"></script>
<script src="/css/jquery-3.5.1.js"></script>
<script src="/css/jquery.dataTables.min.js"></script>


<script>
    $(document).ready(function() {
        $('#example').DataTable();
    });
</script>

</html>